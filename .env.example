# Base domain (merveilles.town in production)
DOMAIN=localhost

# JID of the server administrator
PROSODY_ADMIN_JID=admin@localhost

# OIDC client secret (auto-generated by bootstrap-keycloak.py)
PROSODY_OAUTH_SECRET=PASTE_FROM_KEYCLOAK_UI

# Keycloak realm name
KC_REALM=merveilles

# Postgres superuser (used to bootstrap the database)
DB_NAME=keycloak
DB_USER=postgres
DB_PASSWORD=REPLACE_ME

# Per-service database credentials (created by init-db.sh)
KC_DB_USER=keycloak_user
KC_DB_PASSWORD=REPLACE_ME
PROSODY_DB_USER=prosody_user
PROSODY_DB_PASSWORD=REPLACE_ME

# Keycloak admin
KC_ADMIN=admin
KC_ADMIN_PASSWORD=REPLACE_ME

# Let's Encrypt email for Caddy (production only)
CADDY_EMAIL=admin@example.com
